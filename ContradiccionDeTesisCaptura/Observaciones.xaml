<Window x:Class="ContradiccionDeTesisCaptura.Observaciones"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Observaciones" Height="300" Width="484" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="50" />
        </Grid.RowDefinitions>
        <TextBox HorizontalAlignment="Stretch" Name="TxtObservaciones" VerticalAlignment="Stretch" AcceptsReturn="True" />
        <Button Content="Aceptar" Grid.Row="1" Height="23" HorizontalAlignment="Right" Margin="0,15,12,0" Name="BtnAceptar" VerticalAlignment="Top" Width="75" Click="BtnAceptar_Click" />
        <Button Content="Cancelar" Grid.Row="1" Height="23" HorizontalAlignment="Left" Margin="294,15,0,0" Name="BtnCancelar" VerticalAlignment="Top" Width="75" Click="BtnCancelar_Click" />
    </Grid>
</Window>
