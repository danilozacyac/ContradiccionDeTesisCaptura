                                                        DataMemberBinding="{Binding FechaOficio}"
                                                        Header="Fecha de turno"
                                                        IsFilterable="False" />
                            <telerik:GridViewDataColumn Width="*"
                                                        DataMemberBinding="{Binding Oficio}"
                                                        Header="Exp."
                                                        IsFilterable="False"
