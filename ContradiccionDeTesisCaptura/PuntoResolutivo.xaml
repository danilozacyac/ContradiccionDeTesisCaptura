<Window x:Class="ContradiccionDeTesisCaptura.PuntoResolutivo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="PuntoResolutivo" Height="300" Width="300" Loaded="Window_Loaded">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        <TextBox HorizontalAlignment="Stretch"  Name="TxtResolutivo" VerticalAlignment="Stretch" Text="{Binding Resolutivo,Mode=TwoWay}"  />
        <Button Content="Aceptar" Grid.Row="1" Height="23" HorizontalAlignment="Right" Margin="0,15,12,0" Name="BtnAceptar" VerticalAlignment="Top" Width="75" Click="BtnAceptar_Click" />
        <Button Content="Cancelar" Grid.Row="1" Height="23" HorizontalAlignment="Right" Margin="0,15,93,0" Name="BtnCancelar" VerticalAlignment="Top" Width="75" Click="BtnCancelar_Click" />
    </Grid>
</Window>
