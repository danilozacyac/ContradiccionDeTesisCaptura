<Window x:Class="ContradiccionDeTesisCaptura.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:converter="clr-namespace:ContradiccionDeTesisCaptura.Converters"
        xmlns:igDP="http://infragistics.com/DataPresenter"
        xmlns:telerik="http://schemas.telerik.com/2008/xaml/presentation"
        Title="MainWindow"
        Width="1005"
        Height="404"
        Icon="/ContradiccionDeTesisCaptura;component/1393376608_86548.ico"
        Loaded="Window_Loaded"
        WindowState="Maximized">
    <Window.Resources>
        <converter:StatusConverter x:Key="statusConverter" />
        <converter:TipoAsuntoConverter x:Key="tiposConverter" />
        <converter:FinalStatusConverter x:Key="finalStatus" />
    </Window.Resources>
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="30" />
            <RowDefinition Height="*" />
            <RowDefinition Height="30" />
        </Grid.RowDefinitions>
        <Button Name="BtnAgregar"
                Grid.Row="2"
                Width="75"
                Height="23"
                Margin="0,0,26,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="BtnAgregar_Click"
                Content="Agregar" />
        <Button Name="BtnModificar"
                Grid.Row="2"
                Width="75"
                Height="23"
                Margin="0,0,107,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="BtnModificar_Click"
                Content="Modificar"
                IsEnabled="True" />
        <telerik:RadGridView Name="RGridContradicciones"
                             Grid.Row="1"
                             Margin="25,25,25,25"
                             HorizontalAlignment="Stretch"
                             VerticalAlignment="Stretch"
                             AutoGenerateColumns="False"
                             CanUserDeleteRows="False"
                             CanUserInsertRows="False"
                             IsReadOnly="False"
                             ItemsSource="{Binding}"
                             SelectionChanged="RGridContradicciones_SelectionChanged"
                             ShowGroupPanel="False">
            <telerik:RadGridView.Columns>
                <telerik:GridViewCheckBoxColumn Width="40"
                                                DataMemberBinding="{Binding IsComplete}"
                                                Header="¿Cerrada?"
                                                IsFilterable="True" />
                <telerik:GridViewDataColumn Width="40"
                                            DataMemberBinding="{Binding IdContradiccion}"
                                            Header="Id"
                                            IsFilterable="False"
                                            IsVisible="False" />
                <telerik:GridViewDataColumn Width="80"
                                            DataMemberBinding="{Binding ExpedienteNumero}"
                                            Header="Num. Exp."
                                            IsVisible="True" />
                <telerik:GridViewDataColumn Width="Auto"
                                            DataMemberBinding="{Binding ExpedienteAnio}"
                                            Header="Año"
                                            IsFilterable="True" />
                <telerik:GridViewDataColumn Width="Auto"
                                            DataMemberBinding="{Binding IdTipoAsunto,
                                                                        Converter={StaticResource tiposConverter}}"
                                            Header="Tipo de Asunto"
                                            IsFilterable="False" />
                <telerik:GridViewDataColumn Width="*"
                                            DataMemberBinding="{Binding Tema}"
                                            Header="Tema"
                                            IsFilterable="False" />
                <telerik:GridViewDataColumn Width="100"
                                            DataMemberBinding="{Binding Status,
                                                                        Converter={StaticResource statusConverter}}"
                                            Header="Estado" />
                <telerik:GridViewDataColumn Width="150"
                                            DataMemberBinding="{Binding Oficio}"
                                            Header="Oficio"
                                            IsFilterable="False" />
                <telerik:GridViewDataColumn Width="150"
                                            DataFormatString=" {0: dd/MM/yyyy} "
                                            DataMemberBinding="{Binding FechaTurno}"
                                            Header="Fecha de turno"
                                            IsFilterable="False" />
                <telerik:GridViewDataColumn Width="150"
                                            DataMemberBinding="{Binding Denunciantes}"
                                            Header="Denunciante"
                                            IsFilterable="False" />


            </telerik:RadGridView.Columns>
            <telerik:RadGridView.RowStyle>
                <Style TargetType="telerik:GridViewRow">
                    <Setter Property="Background" Value="{Binding IsComplete, Converter={StaticResource finalStatus}}" />
                </Style>
            </telerik:RadGridView.RowStyle>
        </telerik:RadGridView>
        <Button Name="BtnVisualizar"
                Grid.Row="2"
                Width="75"
                Height="23"
                Margin="0,0,188,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="BtnVisualizar_Click"
                Content="Visualizar" />
        <Button Name="BtnDelete"
                Grid.Row="2"
                Width="75"
                Height="23"
                Margin="0,0,269,0"
                HorizontalAlignment="Right"
                VerticalAlignment="Top"
                Click="BtnDelete_Click"
                Content="Eliminar" />
        <Button Name="BtnPdf"
                Grid.Row="2"
                Width="159"
                Height="23"
                Margin="25,0,0,0"
                HorizontalAlignment="Left"
                VerticalAlignment="Top"
                Click="BtnPdf_Click"
                Content="Generar Listado en PDF" />
        <Button x:Name="BtnImportar" Content="Importar " HorizontalAlignment="Left" Margin="228,0,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Height="23" Click="BtnImportar_Click"/>
    </Grid>
</Window>
